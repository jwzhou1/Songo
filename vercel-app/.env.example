# =============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyBvOkBwgGlbUiuS-mLlm_IjYVBvOkBwgGl

# =============================================================================
# SHIPPING CARRIER API KEYS
# =============================================================================
# FedEx API Configuration
FEDEX_API_KEY=your_fedex_api_key
FEDEX_SECRET_KEY=your_fedex_secret_key
FEDEX_ACCOUNT_NUMBER=123456789
FEDEX_METER_NUMBER=123456789

# UPS API Configuration
UPS_API_KEY=your_ups_api_key
UPS_SECRET_KEY=your_ups_secret_key
UPS_ACCESS_TOKEN=your_ups_access_token
UPS_ACCOUNT_NUMBER=123456

# DHL API Configuration
DHL_API_KEY=your_dhl_api_key
DHL_SECRET_KEY=your_dhl_secret_key
DHL_ACCOUNT_NUMBER=123456789

# USPS API Configuration
USPS_USER_ID=your_usps_user_id
