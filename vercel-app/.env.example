# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (for relational data)
DATABASE_URL=postgresql://username:password@localhost:5432/songo_enterprise

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:4566
USERS_TABLE=songo-enterprise-users
QUOTES_TABLE=songo-enterprise-quotes
SHIPMENTS_TABLE=songo-enterprise-shipments
TRACKING_EVENTS_TABLE=songo-enterprise-tracking-events
PAYMENTS_TABLE=songo-enterprise-payments

# S3 Configuration
S3_DOCUMENTS_BUCKET=songo-enterprise-documents
S3_LABELS_BUCKET=songo-enterprise-labels

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key

# Session Configuration
SESSION_SECRET=your_session_secret_key_min_32_chars

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=SonGo Enterprise
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Enterprise Shipping Management Platform

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_DEBUG=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_REAL_TIME_TRACKING=true
NEXT_PUBLIC_ENABLE_PAYMENT_PROCESSING=true
NEXT_PUBLIC_ENABLE_MULTI_CARRIER_QUOTES=true
NEXT_PUBLIC_ENABLE_GPS_TRACKING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# LogRocket Session Recording
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Firebase Cloud Messaging
