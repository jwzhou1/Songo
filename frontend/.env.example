# SonGo Enterprise Frontend - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Production URLs (uncomment for production)
# NEXT_PUBLIC_API_URL=https://api.songo-enterprise.com
# NEXT_PUBLIC_WS_URL=wss://api.songo-enterprise.com

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef

# Production Stripe Key (uncomment for production)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_51234567890abcdef

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyBvOkBwgGlbUiuS-mLlm_IjYVBvOkBwgGl

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=SonGo Enterprise
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Enterprise Shipping Management Platform

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_DEBUG=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_REAL_TIME_TRACKING=true
NEXT_PUBLIC_ENABLE_PAYMENT_PROCESSING=true
NEXT_PUBLIC_ENABLE_MULTI_CARRIER_QUOTES=true
NEXT_PUBLIC_ENABLE_GPS_TRACKING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# LogRocket Session Recording
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your-microsoft-client-id

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Firebase Cloud Messaging
NEXT_PUBLIC_FCM_VAPID_KEY=your-fcm-vapid-key
NEXT_PUBLIC_FCM_SENDER_ID=123456789012

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Default Settings
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_DEFAULT_WEIGHT_UNIT=LB
NEXT_PUBLIC_DEFAULT_DIMENSION_UNIT=IN
NEXT_PUBLIC_DEFAULT_COUNTRY=US

# Supported Countries
NEXT_PUBLIC_SUPPORTED_COUNTRIES=US,CA,MX,GB,DE,FR,IT,ES,AU,JP

# Supported Currencies
NEXT_PUBLIC_SUPPORTED_CURRENCIES=USD,CAD,EUR,GBP,AUD,JPY

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme Configuration
NEXT_PUBLIC_PRIMARY_COLOR=#667eea
NEXT_PUBLIC_SECONDARY_COLOR=#764ba2
NEXT_PUBLIC_ACCENT_COLOR=#4caf50
NEXT_PUBLIC_WARNING_COLOR=#ff9800
NEXT_PUBLIC_ERROR_COLOR=#f44336

# Layout Configuration
NEXT_PUBLIC_SIDEBAR_WIDTH=280
NEXT_PUBLIC_HEADER_HEIGHT=64
NEXT_PUBLIC_FOOTER_HEIGHT=60

# Animation Settings
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ANIMATION_DURATION=300

# =============================================================================
# MAP CONFIGURATION
# =============================================================================
# Default Map Settings
NEXT_PUBLIC_MAP_DEFAULT_ZOOM=4
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LAT=39.8283
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LNG=-98.5795

# Map Style
NEXT_PUBLIC_MAP_STYLE=roadmap
NEXT_PUBLIC_MAP_THEME=default

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Caching
NEXT_PUBLIC_CACHE_DURATION=300000
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# Image Optimization
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_FORMATS=webp,jpg,png

# Lazy Loading
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true
NEXT_PUBLIC_INTERSECTION_THRESHOLD=0.1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=https://api.songo-enterprise.com/csp-report

# HTTPS Configuration
NEXT_PUBLIC_FORCE_HTTPS=false
NEXT_PUBLIC_HSTS_MAX_AGE=31536000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Development Server
NEXT_PUBLIC_DEV_SERVER_PORT=4200
NEXT_PUBLIC_DEV_SERVER_HOST=localhost

# Hot Reload
NEXT_PUBLIC_ENABLE_HMR=true

# Source Maps
NEXT_PUBLIC_GENERATE_SOURCEMAP=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Environment
NEXT_PUBLIC_TEST_API_URL=http://localhost:3001
NEXT_PUBLIC_TEST_STRIPE_KEY=pk_test_test_key
NEXT_PUBLIC_TEST_GOOGLE_MAPS_KEY=test_google_maps_key

# Mock Data
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_MOCK_DELAY=1000

# =============================================================================
# ACCESSIBILITY
# =============================================================================
NEXT_PUBLIC_ENABLE_A11Y=true
NEXT_PUBLIC_A11Y_ANNOUNCE_ROUTE_CHANGES=true
NEXT_PUBLIC_HIGH_CONTRAST_MODE=false

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,de,it,ja,zh
NEXT_PUBLIC_ENABLE_RTL=false

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
NEXT_PUBLIC_PWA_NAME=SonGo Enterprise
NEXT_PUBLIC_PWA_SHORT_NAME=SonGo
NEXT_PUBLIC_PWA_DESCRIPTION=Enterprise Shipping Management Platform
NEXT_PUBLIC_PWA_THEME_COLOR=#667eea
NEXT_PUBLIC_PWA_BACKGROUND_COLOR=#ffffff
NEXT_PUBLIC_PWA_DISPLAY=standalone
NEXT_PUBLIC_PWA_ORIENTATION=portrait

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Weather API (for shipping conditions)
NEXT_PUBLIC_WEATHER_API_KEY=your-weather-api-key

# Currency Exchange API
NEXT_PUBLIC_EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# Address Validation API
NEXT_PUBLIC_ADDRESS_VALIDATION_API_KEY=your-address-validation-api-key

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================
# Privacy Policy
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://songo-enterprise.com/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://songo-enterprise.com/terms
NEXT_PUBLIC_COOKIE_POLICY_URL=https://songo-enterprise.com/cookies

# GDPR Compliance
NEXT_PUBLIC_ENABLE_COOKIE_CONSENT=true
NEXT_PUBLIC_GDPR_COMPLIANT=true

# =============================================================================
# CONTACT & SUPPORT
# =============================================================================
NEXT_PUBLIC_SUPPORT_EMAIL=support@songo-enterprise.com
NEXT_PUBLIC_SUPPORT_PHONE=+1-800-SONGO-HELP
NEXT_PUBLIC_SUPPORT_CHAT_ENABLED=true

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@SonGoEnterprise
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/songo-enterprise
NEXT_PUBLIC_GITHUB_URL=https://github.com/songo-enterprise

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Build Optimization
NEXT_PUBLIC_BUNDLE_ANALYZER=false
NEXT_PUBLIC_TREE_SHAKING=true
NEXT_PUBLIC_CODE_SPLITTING=true

# Asset Optimization
NEXT_PUBLIC_OPTIMIZE_IMAGES=true
NEXT_PUBLIC_OPTIMIZE_CSS=true
NEXT_PUBLIC_OPTIMIZE_JS=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel Configuration
VERCEL_URL=songo-enterprise.vercel.app
VERCEL_ENV=development

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.songo-enterprise.com
NEXT_PUBLIC_ASSETS_URL=https://assets.songo-enterprise.com

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Debug Features
NEXT_PUBLIC_SHOW_DEBUG_INFO=false
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true
